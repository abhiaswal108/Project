<%- include('./partials/header', { title: 'Post' }); %>
<h1><%= post?.title%></h1>

<h1><%= post?.content%></h1>
<p>by <%= post.author?.username|| "Unknown" %> on <%= post.createdAt?.toDateString()||"2025" %>
<%post?.images?.forEach((image)=>{%>

    <div>
        <img src="<%=image.url%>">

    </div>
<%})
    %>
    <!--Check login user is owner-->
    <% if(user?._id.toString() == post?.author?._id.toString()) { %>
  
        <div>
            <a href="/post/<%=post?._id%>/delete">Delete</a>
            <a href="/post/<%=post?._id%>/edit">Edit</a>
        </div>
    <%}%>
<div>
    <h3>Comment</h3>
    <form action="/post/<%= post?._id%>/comment" method="post">
        <input type="text" name="content"/>
           <input type="submit" name="Comment"/>
    </form>
</div>

<%- include('partials/footer') %>