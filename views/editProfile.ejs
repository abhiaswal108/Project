<%- include('./partials/header', { title: 'Edit' }); %>
<form action="/user/<%= user._id %>/edit" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" value="<%= user.username %>">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" class="form-control" value="<%= user.email %>">
    </div>
    <div class="form-group">
        <label for="bio">Bio</label>
        <textarea name="bio" id="bio" class="form-control"><%= user.bio %></textarea>
    </div>
    <div class="form-group">
        <label for="profilePic">Profile Picture</label>
        <input class="form-control" type="file" name="profilepicture" id="profilePic">
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
</form>
<%- include('partials/footer') %>